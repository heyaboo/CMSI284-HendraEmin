4) This one compiles but for some reason it isn't counting the seconds

#include <stdio.h>
#include <time.h>

int main () {
    clock_t start_t, end_t, total_t;
    char enter1, enter2;
    printf ("This program will test how long you can hold your breath. \n");

    while (1) {
        printf("Press enter to start the timer. \n");
        enter1 = getchar();
        if(enter1 == 0x0A){
            start_t = clock();
            break;
        }
    }

    while (1) {
        printf("Press enter when you can't hold your breath any longer");
        enter2 = getchar();
        if (enter2 == 0x0A) {
            end_t = clock();
            break;
        }
    }
    total_t = (end_t - start_t) * 1000 / CLOCKS_PER_SEC;
    printf("In seconds, you held your breath for %f\n", total_t);
}

